<%= render "admin/partials/navigation" %>

<div class="wrap-main">
	<section id="faq">
		<div class="row">
      <div class="title-wrap">
        <h1 class="section-head">Edit FAQ</h1>
        <div class="hline"></div>
      </div>

      <%= simple_form_for @faq, :html => { id: "faq_form" }, :method => :put do |f| %>
        <%= f.input :id, :as => :hidden, :label_html => { :class => "no-label" } %>
        <%= f.input :question, placeholder: "Question", required: true, :label_html => { :class => "no-label" }, validate: { presence: true } %>
        <%= f.input :answer, as: :text, placeholder: "Answer", required: true, :label_html => { :class => "no-label" }, validate: { presence: true } %>
        <div class="column_wrap">
          <%= f.input :display?, :as => :select, :label_html => { :class => "no-label" } %>
          <%= f.input :priority, required: true, collection: 1..(@faqs.count), :placeholder => "Priority", :label_html => { :class => "no-label" } %>
        </div>
        <div class="column_wrap">
          <%= f.button :submit, :id => "faq_view_submit", :value => "Update FAQ" %>
          <%= f.button :submit, :id => "faq_view_delete", :value => "Delete FAQ" %>
        </div>
			<% end %>
    </div>

    <%= javascript_tag do %>
      window.onload = function() {
        $('#faq_display').select2({
          placeholder: "Visible?",
          allowClear: true
        });

        $('#faq_priority').select2({
          placeholder: "Priority",
          allowClear: true
        });
      }
    <% end %>
  </section>
</div>
