<%= render "user/navigation" %>
<div class="top outer border reset-pass-border"></div>
<div class="top inner border reset-pass-border"></div>
<div class="right outer border reset-pass-border"></div>
<div class="right inner border reset-pass-border"></div>

<%= form_tag("/users/password/reset", :method => :post, id: "reset-password") do %>
  <div class="title-wrap">
    <h1 class="section-head" id="request-password">Reset Password</h1>
    <div class="reset-pass-title-animation">
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" id="Layer_1" data-name="Layer 1" viewBox="0 0 592.07 37.13">
      <defs>
          <style>
            #reset-pass-top-line{stroke:url(#New_Gradient_Swatch);}
            #reset-pass-center-hanging{stroke-width:0.5px;stroke:url(#New_Gradient_Swatch-2);}
            #reset-pass-bottom-line{stroke:url(#New_Gradient_Swatch-3);}
          </style>
          <linearGradient id="New_Gradient_Swatch" y1="0.5" x2="592.07" y2="0.5" gradientUnits="userSpaceOnUse">
              <stop offset="0" stop-color="#f9e1a2"/>
              <stop offset="1" stop-color="#b4892d"/>
          </linearGradient>
          <linearGradient id="New_Gradient_Swatch-2" x1="193.67" y1="37.89" x2="193.67" y2="15.65" xlink:href="#New_Gradient_Swatch"/>
          <linearGradient id="New_Gradient_Swatch-3" x1="80.3" y1="15.06" x2="361.47" y2="15.06" xlink:href="#New_Gradient_Swatch"/>
      </defs>
      <line class="reset-pass-paths-lines" id="reset-pass-top-line" y1="0.5" x2="592.07" y2="0.5"/>
      <path class="reset-pass-paths-lines" id="reset-pass-center-hanging" d="M143.28,15.82c2.91,3.06,22.78,23.27,53.66,21.73,26.27-1.31,43.51-18,47.13-21.73" transform="translate(0 -0.75)"/>
      <line class="reset-pass-paths-lines" id="reset-pass-bottom-line" x1="80.3" y1="15.06" x2="361.47" y2="15.06"/>
      </svg>
    </div>
  </div>
  <%- if flash[:error] %>
    <p id="error">  <%= p flash[:error] %> </p>
    <%- flash[:error] = nil %>
  <%- end %>
  <div class="fields">
    <%= hidden_field_tag 'token', params[:t]  %>
    <div class="fields">
      <%= label_tag(:name, "Password", class: 'no-label') %>
      <%= password_field_tag 'password', nil, placeholder: 'Password' %>
      <%= label_tag(:name, "Confirm Password", class: 'no-label') %>
      <%= password_field_tag 'password_confirmation', nil, placeholder: 'Confirm Password' %>
    </div>
  </div>
  <%= submit_tag "Submit", :class => "btn"%>
<% end %>
